{
    "compilerOptions": {
        "target": "ES2020",
        "module": "Node16",
        "lib": [
            "ES2020"
        ],
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./",
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node16",
        "resolveJsonModule": true
    },
    "include": [
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests"
    ]
}