{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "react-hooks"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "camelcase": "error",
        "default-case-last": "error",
        "curly": [
            "error",
            "multi-line"
        ],
        "default-param-last": "error",
        "eqeqeq": "error",
        "no-eval": "error",
        "no-implied-eval": "error",
        "indent": [
            "error",
            4
        ],
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
    }
}
